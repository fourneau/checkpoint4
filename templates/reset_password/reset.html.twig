{% extends 'base.html.twig' %} {% block title %}- Réinitialiser votre mot de passe {% endblock %} {% block body %}

<div class="container mt-5 pt-4">
    <div class="text-center">
        <div class="hero-banner--sm__content">
            <h1>Réinitialiser votre mot de passe</h1>
        </div>
    </div>
</div>
<section class="section-margin">
    <div class="container text-center">
        {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %} {{ form_start(resetForm) }} {{ form_row(resetForm.plainPassword) }}
        <button class="btn m-5 bg-white rounded text-center">Réinitialiser</button> {{ form_end(resetForm) }}
    </div>
</section>

{% endblock %}